<?xml version="1.0" encoding="UTF-8"?>
<lint>
    <!--https://issuetracker.google.com/issues/129121201-->
    <issue id="all">
        <ignore path="*/build/*" />
        <ignore path="*/tmp/*" />
    </issue>

    <issue id="ContentDescription" severity="ignore" />
    <issue id="KeyboardInaccessibleWidget" severity="ignore" />
    <issue id="MissingTranslation" severity="ignore" />
    <issue id="ClickableViewAccessibility" severity="ignore" />
    <issue id="LabelFor" severity="ignore" />
    <issue id="Autofill" severity="ignore" />
    <issue id="RtlHardcoded" severity="ignore" />
    <issue id="WrongViewCast" severity="ignore" />
    <issue id="Overdraw" severity="ignore" />

    <!-- Enable Andrid Lint rules that were disabeld by default -->
    <issue id="ConvertToWebp" severity="error"/>
    <issue id="NoHardKeywords" severity="error" />
    <issue id="MissingRegistered" severity="error" />
    <issue id="RequiredSize" severity="error" />

    <!-- https://github.com/vanniktech/lint-rules -->
    <!-- Enabled rules -->
    <issue id="AssertjImport" severity="error"/>
    <issue id="ColorCasing" severity="error">
        <ignore path="*/drawable/*"/>
        <ignore path="*/drawable-*/*"/>
    </issue>
    <issue id="ResourcesGetColorCall" severity="error"/>
    <issue id="ResourcesGetColorStateListCall" severity="error"/>
    <issue id="ResourcesGetDrawableCall" severity="error"/>
    <issue id="SuperfluousMarginDeclaration" severity="error"/>
    <issue id="SuperfluousNameSpace" severity="error"/>
    <issue id="SuperfluousPaddingDeclaration" severity="error"/>
    <issue id="UnsupportedLayoutAttribute" severity="error"/>
    <issue id="UnusedMergeAttributes" severity="error"/>
    <!-- Rules to enable -->
    <issue id="NamingPattern" severity="ignore"/>
    <issue id="ShouldUseStaticImport" severity="ignore"/>
    <issue id="InvalidImport" severity="ignore"/>
    <!-- Disabled rules -->
    <issue id="ConstraintLayoutToolsEditorAttribute" severity="ignore"/>
    <issue id="DefaultLayoutAttribute" severity="ignore"/>
    <issue id="InvalidSingleLineComment" severity="ignore"/>
    <issue id="InvalidString" severity="ignore"/>
    <issue id="JCenter" severity="ignore"/>
    <issue id="LayoutFileNameMatchesClass" severity="ignore"/>
    <issue id="MatchingMenuId" severity="ignore"/>
    <issue id="MatchingViewId" severity="ignore"/>
    <issue id="MissingXmlHeader" severity="ignore"/>
    <issue id="RawColor" severity="ignore"/>
    <issue id="RawDimen" severity="ignore"/>
    <issue id="Todo" severity="ignore"/>
    <issue id="WrongAnnotationOrder" severity="ignore"/>
    <issue id="WrongConstraintLayoutUsage" severity="ignore"/>
    <issue id="WrongLayoutName" severity="ignore"/>
    <issue id="WrongMenuIdFormat" severity="ignore"/>
    <issue id="WrongTestMethodName" severity="ignore"/>
    <issue id="WrongViewIdFormat" severity="ignore"/>
    <issue id="XmlSpacing" severity="ignore"/>
    <issue id="GradleDependency" severity="ignore"/>
</lint>
